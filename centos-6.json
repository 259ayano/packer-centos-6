{
  "builders": [
    {
      "type": "virtualbox-iso",
      "name": "centos-6",
      "boot_command": [
        "<esc><wait>",
        "linux ks=http://{{.HTTPIP}}:{{.HTTPPort}}/centos-6-base-vagrant-virtualbox-ks.cfg",
        "<enter><wait>"
      ],
      "boot_wait": "3s",
      "disk_size": "40960",
      "format": "ovf",
      "guest_additions_mode": "disable",
      "guest_os_type": "RedHat_64",
      "hard_drive_interface": "sata",
      "headless": true,
      "http_directory": "http",
      "iso_interface": "sata",
      "iso_target_path": "isos/x86_64",
      "iso_urls": [
        "isos/x86_64/CentOS-6.8-x86_64-minimal.iso",
        "http://mirrors.kernel.org/centos/6.8/isos/x86_64/CentOS-6.8-x86_64-minimal.iso"
      ],
      "iso_checksum_type": "sha256",
      "iso_checksum": "ec49c297d484b9da0787e5944edc38f7c70f21c0f6a60178d8e9a8926d1949f4",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "10m",
      "shutdown_command": "/usr/bin/sudo /sbin/shutdown -q -P now",
      "shutdown_timeout": "1m",
      "virtualbox_version_file": ".vbox_version",
      "vm_name": "centos-6",
      "vboxmanage": [
        ["modifyvm","{{.Name}}","--memory","512"],
        ["modifyvm","{{.Name}}","--vram","12"],
        ["modifyvm","{{.Name}}","--cpus","1"],
        ["modifyvm","{{.Name}}","--hpet","on"],
        ["modifyvm","{{.Name}}","--accelerate3d","off"],
        ["modifyvm","{{.Name}}","--accelerate2dvideo","off"],
        ["modifyvm","{{.Name}}","--bioslogofadein","off"],
        ["modifyvm","{{.Name}}","--bioslogofadeout","off"],
        ["modifyvm","{{.Name}}","--bioslogodisplaytime","0"],
        ["modifyvm","{{.Name}}","--biosbootmenu","disabled"],
        ["modifyvm","{{.Name}}","--clipboard","disabled"],
        ["modifyvm","{{.Name}}","--draganddrop","disabled"],
        ["modifyvm","{{.Name}}","--usb","off"],
        ["modifyvm","{{.Name}}","--audio","none"],
        ["modifyvm","{{.Name}}","--videocap","off"]
      ],
      "vboxmanage_post": [
        ["modifyvm","{{.Name}}","--vrde","off"],
        ["storagectl","{{.Name}}","--name","IDE Controller","--remove"],
        ["storagectl","{{.Name}}","--name","SATA Controller","--hostiocache","off"]
      ]
    }
  ],
  "post-processors": [
    {
      "type": "compress",
      "output": "builds/{{.BuildName}}-{{.BuilderType}}.box.tar.gz",
      "compression_level": 9,
      "keep_input_artifact": false
    },
    {
      "type": "vagrant",
      "vagrantfile_template": "centos-6.vagrantfile",
      "output": "builds/{{.BuildName}}-{{.Provider}}.box",
      "compression_level": 9,
      "keep_input_artifact": false
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} /usr/bin/sudo -E /bin/bash {{ .Path }}",
      "inline_shebang": "/bin/bash -e",
      "remote_folder": "/home/vagrant",
      "skip_clean": false,
      "inline": [
        "/bin/echo '--> Disabling SSH password authentication.'",
        "/bin/sed -i \\",
        "  -e 's~^PasswordAuthentication yes~PasswordAuthentication no~g' \\",
        "  /etc/ssh/sshd_config",
        "/bin/echo '--> Sealing virtual-guest.'",
        "/bin/echo '---> Removing SSH host keys.'",
        "/bin/rm -f /etc/ssh/ssh_host_*",
        "/bin/echo '---> Generalising hostname.'",
        "/bin/sed -i \\",
        "  -e 's~^HOSTNAME=.*$~HOSTNAME=localhost.localdomain~g' \\",
        "  /etc/sysconfig/network",
        "/bin/echo '---> Removing udev rules.'",
        "/bin/rm -rf /etc/udev/rules.d/70-*",
        "/bin/echo '---> Generalising network device configuration.'",
        "/bin/sed -i \\",
        "  -e 's~^DHCP_HOSTNAME=.*$~DHCP_HOSTNAME=\\\"localhost.localdomain\\\"~' \\",
        "  -e '/^HWADDR=/d' \\",
        "  -e '/^UUID=/d' \\",
        "  /etc/sysconfig/network-scripts/ifcfg-eth*",
        "/bin/echo '--> Cleanup YUM.'",
        "/usr/bin/yum clean all",
        "/bin/echo '--> Rebuilding RPM DB.'",
        "/bin/rpm --rebuilddb",
        "/bin/echo '--> Truncating documentaion.'",
        "/bin/find /usr/share/{man,doc,info} -type f -delete",
        "/bin/echo '--> Stopping logging services.'",
        "/etc/init.d/auditd stop",
        "/etc/init.d/rsyslog stop",
        "/bin/echo '--> Truncate log files.'",
        "/bin/find /var/log -type f | \\",
        "  /usr/bin/xargs -I {} \\",
        "  /usr/bin/truncate -s 0 {}",
        "/bin/echo '--> Emptying temporary directories.'",
        "/bin/rm -rf /{root,tmp,var/cache/{ldconfig,yum}}/*",
        "/bin/echo '--> Zero out any remaining free disk space.'",
        "/bin/dd if=/dev/zero of=/boot/zero.out bs=1M &",
        "/bin/dd if=/dev/zero of=/zero.out bs=1M",
        "/bin/find /{,boot} -name zero.out -delete",
        "/bin/echo '--> Provisioning complete.'"
      ]
    }
  ]
}