{
  "variables": {
    "guest_boot_timeout": "0",
    "guest_bootloader_append": "",
    "guest_firewall_disabled": "false",
    "guest_hard_disk_size": "40960",
    "guest_keyboard": "uk",
    "guest_language": "en_GB.UTF-8",
    "guest_lv_root_fstype": "ext4",
    "guest_lv_root_size": "1024",
    "guest_lv_swap_size": "4096",
    "guest_partition_boot_fstype": "ext4",
    "guest_partition_boot_size": "250",
    "guest_selinux": "permissive",
    "guest_timezone": "Etc/UTC",
    "guest_vg_root_reserved_space": "0",
    "ssh_root_password": "vagrant",
    "ssh_user": "vagrant",
    "ssh_user_authorized_keys": "ssh-rsa  vagrant insecure public key",
    "ssh_user_home": "/home/vagrant",
    "ssh_user_password": "vagrant",
    "ssh_user_shell": "/bin/bash",
    "ssh_user_sudo": "ALL=(ALL) NOPASSWD: ALL"
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "name": "centos-6",
      "boot_command": [
        "<esc><wait>",
        "linux ks=http://{{.HTTPIP}}:{{.HTTPPort}}/centos-6-minimal.cfg",
        " BOOT_TIMEOUT={{user `guest_boot_timeout`}}",
        " BOOTLOADER_APPEND=\"{{user `guest_bootloader_append`}}\"",
        " BOOTLOADER_THEME=details",
        " LANG={{user `guest_language`}}",
        " KEYTABLE={{user `guest_keyboard`}}",
        " TIMEZONE={{user `guest_timezone`}}",
        " ROOTPW={{user `ssh_root_password`}}",
        " FIREWALL_DISABLED={{user `guest_firewall_disabled`}}",
        " SELINUX={{user `guest_selinux`}}",
        " LV_ROOT_FSTYPE={{user `guest_lv_root_fstype`}}",
        " LV_ROOT_SIZE={{user `guest_lv_root_size`}}",
        " LV_SWAP_SIZE={{user `guest_lv_swap_size`}}",
        " PART_BOOT_FSTYPE={{user `guest_partition_boot_fstype`}}",
        " PART_BOOT_SIZE={{user `guest_partition_boot_size`}}",
        " VG_ROOT_RESERVED_SPACE={{user `guest_vg_root_reserved_space`}}",
        "<enter><wait>"
      ],
      "boot_wait": "3s",
      "disk_size": "{{user `guest_hard_disk_size`}}",
      "format": "ovf",
      "guest_additions_mode": "disable",
      "guest_os_type": "RedHat_64",
      "hard_drive_interface": "sata",
      "headless": true,
      "http_directory": "http",
      "iso_interface": "sata",
      "iso_target_path": "isos/x86_64",
      "iso_urls": [
        "isos/x86_64/CentOS-6.8-x86_64-minimal.iso",
        "http://mirrors.kernel.org/centos/6.8/isos/x86_64/CentOS-6.8-x86_64-minimal.iso"
      ],
      "iso_checksum_type": "sha256",
      "iso_checksum": "ec49c297d484b9da0787e5944edc38f7c70f21c0f6a60178d8e9a8926d1949f4",
      "ssh_username": "root",
      "ssh_password": "{{user `ssh_root_password`}}",
      "ssh_port": 22,
      "ssh_wait_timeout": "10m",
      "shutdown_command": "/usr/bin/sudo /sbin/shutdown -q -P now",
      "shutdown_timeout": "1m",
      "virtualbox_version_file": ".vbox_version",
      "vm_name": "centos-6",
      "vboxmanage": [
        ["modifyvm","{{.Name}}","--memory","1024"],
        ["modifyvm","{{.Name}}","--vram","16"],
        ["modifyvm","{{.Name}}","--cpus","1"],
        ["modifyvm","{{.Name}}","--hpet","on"],
        ["modifyvm","{{.Name}}","--accelerate3d","off"],
        ["modifyvm","{{.Name}}","--accelerate2dvideo","off"],
        ["modifyvm","{{.Name}}","--bioslogofadein","off"],
        ["modifyvm","{{.Name}}","--bioslogofadeout","off"],
        ["modifyvm","{{.Name}}","--bioslogodisplaytime","0"],
        ["modifyvm","{{.Name}}","--biosbootmenu","disabled"],
        ["modifyvm","{{.Name}}","--clipboard","disabled"],
        ["modifyvm","{{.Name}}","--draganddrop","disabled"],
        ["modifyvm","{{.Name}}","--usb","off"],
        ["modifyvm","{{.Name}}","--audio","none"],
        ["modifyvm","{{.Name}}","--videocap","off"]
      ],
      "vboxmanage_post": [
        ["modifyvm","{{.Name}}","--memory","512"],
        ["modifyvm","{{.Name}}","--vrde","off"],
        ["storagectl","{{.Name}}","--name","IDE Controller","--remove"],
        ["storagectl","{{.Name}}","--name","SATA Controller","--hostiocache","off"]
      ]
    }
  ],
  "post-processors": [
    {
      "type": "compress",
      "output": "builds/{{.BuildName}}-{{.BuilderType}}.box.tar.gz",
      "compression_level": 9,
      "keep_input_artifact": false
    },
    [
      {
        "type": "artifice",
        "files": [
          "centos-6.vagrantfile"
        ]
      },
      {
        "type": "shell-local",
        "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} /bin/bash {{ .Path }}",
        "inline_shebang": "/bin/bash -e",
        "inline": [
          "if [[ ! -d output-tmp ]]; then",
          "   mkdir output-tmp",
          "fi",
          "if [[ -n ${1} ]] && [[ -f ${1} ]]; then",
          "  echo '--> Generating Vagrantfile template.'",
          "  cp -pf ${1} output-tmp/${1}",
          "  sed -e 's~[{][{]user `ssh_user`[}][}]~{{user `ssh_user`}}~g' output-tmp/${1} > ${1}",
          "fi"
        ]
      }
    ],
    {
      "type": "vagrant",
      "vagrantfile_template": "centos-6.vagrantfile",
      "output": "builds/{{.BuildName}}-{{.Provider}}.box",
      "compression_level": 9,
      "keep_input_artifact": false
    },
    [
      {
        "type": "artifice",
        "files": [
          "output-tmp/centos-6.vagrantfile"
        ]
      },
      {
        "type": "shell-local",
        "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} /bin/bash {{ .Path }}",
        "inline_shebang": "/bin/bash -e",
        "inline": [
          "if [[ -n ${1} ]] && [[ -f ${1} ]]; then",
          "  echo '--> Restoring Vagrantfile template.'",
          "  mv -f ${1} .",
          "fi",
          "echo '--> Cleanup output directories.'",
          "find . -mindepth 1 -maxdepth 1 -type d -name \"output-*\" -exec rm -rf '{}' +"
        ]
      }
    ]
  ],
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} /bin/bash {{ .Path }}",
      "inline_shebang": "/bin/bash -e",
      "remote_folder": "/var/tmp",
      "skip_clean": false,
      "inline": [
        "/bin/echo '--> Installing packages.'",
        "/usr/bin/yum -y install \\",
        "  tuned",
        "/sbin/chkconfig tuned on",
        "/usr/bin/tuned-adm profile \\",
        "  virtual-guest",
        "/bin/echo '--> Configuring SSH.'",
        "/bin/sed -i \\",
        "  -e 's~^PasswordAuthentication yes~PasswordAuthentication no~g' \\",
        "  -e 's~^#PermitRootLogin yes~PermitRootLogin no~g' \\",
        "  -e 's~^#UseDNS yes~UseDNS no~g' \\",
        "  -e 's~^AcceptEnv \\(.*\\)~#AcceptEnv \\1~g' \\",
        "  /etc/ssh/sshd_config",
        "/bin/echo '--> Adding SSH user.'",
        "/usr/sbin/useradd \\",
        "  -m \\",
        "  -d {{user `ssh_user_home`}} \\",
        "  -s {{user `ssh_user_shell`}} \\",
        "  {{user `ssh_user`}}",
        "/bin/echo '--> Setting SSH user password.'",
        "/bin/echo '{{user `ssh_user`}}:{{user `ssh_user_password`}}' | \\",
        "  /usr/sbin/chpasswd",
        "/bin/echo '--> Populating SSH user authorized_keys.'",
        "/bin/mkdir -pm 0700 {{user `ssh_user_home`}}/.ssh",
        "/bin/echo \"{{user `ssh_user_authorized_keys`}}\" \\",
        "  > {{user `ssh_user_home`}}/.ssh/authorized_keys",
        "/bin/chown -R {{user `ssh_user`}}:{{user `ssh_user`}} {{user `ssh_user_home`}}/.ssh",
        "/bin/chmod 0600 {{user `ssh_user_home`}}/.ssh/authorized_keys",
        "/bin/echo '---> Restoring SELinux context'",
        "/sbin/restorecon -R {{user `ssh_user_home`}}/.ssh",
        "/bin/echo '--> Configuring sudoer access.'",
        "/bin/echo -e '{{user `ssh_user`}} {{user `ssh_user_sudo`}}' \\",
        "  > /etc/sudoers.d/{{user `ssh_user`}}",
        "/bin/chmod 0440 /etc/sudoers.d/{{user `ssh_user`}}",
        "/bin/echo '--> Sealing virtual-guest.'",
        "/bin/echo '---> Removing SSH host keys.'",
        "/bin/rm -f /etc/ssh/ssh_host_*",
        "/bin/echo '---> Generalising hostname.'",
        "/bin/sed -i \\",
        "  -e 's~^HOSTNAME=.*$~HOSTNAME=localhost.localdomain~g' \\",
        "  /etc/sysconfig/network",
        "/bin/echo '---> Removing udev rules.'",
        "/bin/rm -rf /etc/udev/rules.d/70-*",
        "/bin/echo '---> Generalising network device configuration.'",
        "/bin/sed -i \\",
        "  -e 's~^DHCP_HOSTNAME=.*$~DHCP_HOSTNAME=\\\"localhost.localdomain\\\"~' \\",
        "  -e '/^HWADDR=/d' \\",
        "  -e '/^UUID=/d' \\",
        "  /etc/sysconfig/network-scripts/ifcfg-eth*",
        "/bin/echo '--> Cleanup YUM.'",
        "/usr/bin/yum clean all",
        "/bin/echo '--> Rebuilding RPM DB.'",
        "/bin/rpm --rebuilddb",
        "/bin/echo '--> Purging desktop wallpapers and backgrounds.'",
        "/bin/find /usr/share/{backgrounds,kde4,wallpapers} \\",
        "  -type f -regextype posix-extended -regex '.*\\.(jpg|png)$' -delete",
        "/bin/echo '--> Truncating documentaion.'",
        "/bin/find /usr/share/{man,doc,info} -type f -delete",
        "GUEST_LANG=\"{{user `guest_language`}}\"",
        "/bin/echo '--> Removing locale (internationalisation) files for unused languages.'",
        "/bin/find /usr/share/i18n/locales \\",
        "  -type f \\",
        "  -regextype posix-extended \\",
        "  \\( ! -regex \".*\\/(en_US|${GUEST_LANG%%.*})(@.+)?$\" \\",
        "    -a -regex '.*\\/[a-z][a-z]([a-z])?_[A-Z][A-Z](@.+)?$' \\) \\",
        "  -delete",
        "/bin/echo '--> Removing locale (translation) files for unused languages.'",
        "/bin/find /usr/share/locale \\",
        "  -mindepth 1 \\",
        "  -maxdepth 1 \\",
        "  -type d \\",
        "  -regextype posix-extended \\",
        "  ! -regex \".*\/(en|en_US|${GUEST_LANG%%_*}|${LANG%%.*})(@.+)?$\" \\",
        "  -exec /bin/find -- {} -type f -name \"*.mo\" -delete \\;",
        "/bin/echo '--> Locking locale to {{user `guest_language`}}.'",
        "/usr/bin/chattr +i /etc/sysconfig/i18n",
        "/bin/echo '--> Stopping logging services.'",
        "/etc/init.d/auditd stop",
        "/etc/init.d/rsyslog stop",
        "/bin/echo '--> Truncate log files.'",
        "/bin/find /var/log -type f \\",
        "  -exec /usr/bin/truncate -s 0 {} \\;",
        "/bin/echo '--> Emptying temporary directories.'",
        "/bin/rm -rf /{root,tmp,var/cache/{ldconfig,yum}}/*",
        "/bin/echo '--> Zero out and reset swap.'",
        "SWAP_DEVICE=$(",
        "  readlink -f /dev/disk/by-uuid/$(",
        "    /sbin/blkid -l -o value -s UUID -t TYPE=swap",
        "  )",
        ")",
        "if [[ ${SWAP_DEVICE} == /dev/disk/by-uuid ]]; then",
        "  /bin/echo '---> Skipping (No swap device).'",
        "else",
        "  /sbin/swapoff -a",
        "  /bin/dd if=/dev/zero of=${SWAP_DEVICE} bs=1M",
        "  /sbin/mkswap -f ${SWAP_DEVICE}",
        "fi",
        "/bin/echo '--> Zero out any remaining free disk space.'",
        "/bin/dd if=/dev/zero of=/boot/zero.out bs=1M &",
        "/bin/dd if=/dev/zero of=/zero.out bs=1M",
        "/bin/find /{,boot} -name zero.out -delete",
        "/bin/echo '--> Locking root account.'",
        "/usr/sbin/usermod -L root",
        "/bin/echo '--> Provisioning complete.'"
      ]
    }
  ]
}